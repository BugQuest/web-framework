    <style>
        body {
            background: #0d0d0d;
            color: #0ff;
            font-family: 'Courier New', monospace;
            margin: 0;
            padding: 2rem;
        }

        h1 {
            color: #f0f;
            font-size: 2em;
            text-shadow: 0 0 5px #f0f;
        }

        .error-info {
            margin-bottom: 2rem;
        }

        .trace-item {
            border: 1px solid #0ff;
            margin-bottom: 1rem;
            padding: 0;
            background: #111;
        }

        .trace-header {
            background: #111;
            color: #0ff;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-weight: bold;
            border-bottom: 1px solid #0ff;
        }

        .trace-body {
            display: none;
            padding: 1rem;
            color: #ccc;
            background: #000;
        }

        .code-block {
            background: #111;
            border-left: 3px solid #0ff;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            line-height: 1.4;
            padding: 0.5rem 0;
            margin-top: 1rem;
            overflow-x: auto;
        }

        .code-line {
            display: flex;
            padding: 0 1rem;
            white-space: pre;
            cursor: help;

            :hover{
                background: #222;
            }
        }

        .code-line.highlight {
            background: #400;
            color: #fff;
            position: relative;
            box-shadow: inset 5px 0 0 #f0f;
        }

        .code-line.highlight::before {
            content: 'ðŸ’¥';
            position: absolute;
            left: 0.5rem;
            top: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            font-weight: bold;
            color: #f0f;
        }

        .line-number {
            color: #888;
            width: 4em;
            text-align: right;
            padding-right: 1em;
            flex-shrink: 0;
        }

        .code-line {
            display: flex;
            padding: 0 1rem;
        }

        .line-number {
            width: 4em;
            text-align: right;
            padding-right: 1em;
            color: #888;
            flex-shrink: 0;
        }

        .line-code {
            font-family: 'Courier New', monospace;
            white-space: pre;
            color: #ccc;
        }

        .line-code span {
            white-space: pre;
        }

        .php-keyword {
            color: #f0f;
            font-weight: bold;
        }

        .php-variable {
            color: #0f0;
        }

        .php-string {
            color: #ff0;
        }

        .php-number {
            color: #0ff;
        }

        .php-default {
            color: #ccc;
        }



        .php-keyword {
            color: #f0f; /* mots-clÃ©s, ex : throw, public */
        }

        .php-variable {
            color: #0f0; /* variables ou structures */
        }

        .php-string {
            color: #ff0; /* chaÃ®nes de caractÃ¨res */
        }

        .php-default {
            color: #ccc; /* texte par dÃ©faut */
        }

        .php-other {
            color: #0ff; /* fallback gÃ©nÃ©rique */
        }

    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.trace-header').forEach(header => {
                header.addEventListener('click', () => {
                    const body = header.nextElementSibling;
                    body.style.display = body.style.display === 'block' ? 'none' : 'block';
                });
            });
        });
    </script>
</head>
<body>
<h1>ðŸ’¥ Erreur interne du serveur</h1>

<div class="error-info">
    <p><strong>Message :</strong> {{ error.message }}</p>
    <p><strong>Fichier :</strong> {{ error.file }}</p>
    <p><strong>Ligne :</strong> {{ error.line }}</p>
</div>

<h2>ðŸ§  Stack Trace</h2>
{% for entry in error.trace %}
    <div class="trace-item">
        <div class="trace-header">
            #{{ entry.index }} â€” {{ entry.class ~ entry.type ~ entry.function }}()
        </div>
        <div class="trace-body">
            <p><strong>Fichier :</strong> {{ entry.file }}</p>
            <p><strong>Ligne :</strong> {{ entry.line }}</p>
            {% if entry.args %}
                <p><strong>Arguments :</strong> {{ entry.args|join(', ') }}</p>
            {% endif %}
            {% if entry.snippet is defined and entry.snippet %}
                <div class="code-block">
                    {% for line in entry.snippet %}
                        <div class="code-line {{ line.highlight ? 'highlight' : '' }}">
                            <span class="line-number">{{ '%4d'|format(line.number) }}</span>
                            <span class="line-code">{{ line.code|raw }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endfor %}
</body>
</html>
