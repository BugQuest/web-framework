{% extends '@framework/admin/layout.twig' %}

{% block title %}Page Builder{% endblock %}

{% block content %}
    <div class="builder-header __gjs_header">
        <div class="left">
            <button type="button" class="btn btn-secondary" id="back-button">
                ⬅ Retour
            </button>
        </div>

        <div class="center">
            <input type="text" id="page-title" name="title" value="" placeholder="Titre de la page">
            <input type="text" id="page-slug" name="slug" value="" placeholder="slug-de-la-page">
        </div>

        <div class="right">
            <a id="page-preview" href="" class="btn btn-primary" target="_bq_preview">
                👁️
            </a>
        </div>
    </div>
    <div id="gjs"
         data-id="{{ page }}"
         data-theme="{{ theme }}"
         data-blocks="{{ blocks }}"
    ></div>
{% endblock %}
