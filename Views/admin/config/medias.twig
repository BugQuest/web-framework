{% extends '@framework/admin/layout.twig' %}

{% block content %}
    <div class="page-header">
        <h1>📁 {{ __('Gestion des médias', 'media', 'fr') }}</h1>
    </div>

    <div id="media-upload-overlay" class="__mediaUploadOverlay">
        <div class="upload-message">
            <p id="upload-text">{{ __('Glissez-déposez vos fichiers ici pour les téléverser', 'media', 'fr') }}</p>
        </div>
    </div>

    {% include '@framework/admin/partials/mediaGrid.twig' with {
        medias: media_paginated.items,
        media_paginated: media_paginated,
        tags: tags,
        current_tag: tag|default(null)
    } %}
{% endblock %}
